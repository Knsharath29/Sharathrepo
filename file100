pipeline {
    agent any

    stages {
        stage('clone stage'){
            steps {
                script {
                    echo "this is clone stage"

                }

            }

        }

       stage('Build'){
            steps {
                script {
                    echo "this is clone stage"

                }

            }

        }
       stage('deploy'){
            steps {
                script {
                    echo "this is build stage"

                }

            }

        }
    }
    post{
        always{
            cleanWs()
        }
    }

}
